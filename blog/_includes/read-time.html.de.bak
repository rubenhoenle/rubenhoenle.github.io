{% if post.layout != post %}
  {% assign words = post.content | strip_html | number_of_words %}
  {% if words < 180 %}
    weniger als 1 Minute Lesedauer
  {% elsif words < 360 %}
    1 Minute Lesedauer
  {% else %}
    {{ words | divided_by:180 }} Minuten Lesedauer
  {% endif %}
{% endif %}

{% if post.layout == post %}
  {% assign words = content | number_of_words %}
  {% if words < 180 %}
    weniger als 1 Minute Lesedauer
  {% elsif words < 360 %}
    1 Minute Lesedauer
  {% else %}
    {{ words | divided_by:180 }} Minuten Lesedauer
  {% endif %}
{% endif %}
